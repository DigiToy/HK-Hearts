<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_hearts_collect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image" >

    <ImageView
        android:id="@+id/heart_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/heart_ochki"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/count_of_images_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/heart_img" />

    <ImageView
        android:id="@+id/left_dawn_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" 
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/left_top_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/left_dawn_btn"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/right_dawn_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/right_top_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/right_dawn_btn"
        android:layout_alignParentRight="true" 
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/kitty_left_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/kitty_left"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/life_icon_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/life_icon_img2"
        android:background="@drawable/life_icon"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/life_icon_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/life_icon_img3"
        android:background="@drawable/life_icon"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/life_icon_img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/life_icon"
        android:contentDescription="@string/app_name" />
    
    <ImageButton
        android:id="@+id/pause_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/pause"
        android:contentDescription="@string/app_name"/>
    
<RelativeLayout
        android:id="@+id/pause_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pause_img"
        android:orientation="horizontal" 
        android:visibility="gone">
        
    <ImageButton
        android:id="@+id/play_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:background="@drawable/play1"
        android:contentDescription="@string/app_name"/>
     
      <ImageButton
        android:id="@+id/replay_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/replay"
        android:contentDescription="@string/app_name"/>
    
</RelativeLayout>   
     
</RelativeLayout>